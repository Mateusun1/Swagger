              "example": {
                "id": 1,
                "nome": "João",
                "idade": 19,
                "cpf": "860.111.980-82"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "CREATED",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pessoa"
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST",
